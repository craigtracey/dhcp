# File managed by Chef

#<%= @name %>
group  {
<% @parameters.each_pair do |param,value| -%>
  <%= param %> <%= value %>;
<% end -%>
<% @options.each_pair do |option,value| -%>
  option <%= option %> <%= value %>;
<% end -%>

  # hosts
<% @hosts.each do |host| -%>
  include "<%= node[:dhcp][:config_dir] %>/hosts.d/<%= host %>.conf";
<% end -%>
}

